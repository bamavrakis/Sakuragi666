<%= form_for(@book, :html => {:multipart => true}, :validate => true) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, id: "book-name-form", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, id: "book-author-form", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :private %><br>
    <%= f.check_box :private, id: "book-private-form" %>
  </div>
  <div class="form-group">
    <%= f.label :document %><br>
    <%= f.file_field :document, id: "book-document-form" %>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail %><br>
    <%= f.file_field :thumbnail %>
  </div>

  <div class="tag-title">
    <h3> Add tags to your new book! </h3>
  </div>
  <div class="tag-grid">
    <ul class="tag-grid-ul">
        <% if !@tags.nil?%>
        <% @tags.each do |t| %>
          <li>
            <div class="form-group">
              <%= f.label t.name, :class => "tag-name"  %>
              <%= check_box_tag("tags[]", t.id, false, {:class => "tag-box"}) %>
            </div>
          </li>
        <% end %>
        <%end%>
    </ul>
  </div>
  <div class="clearfix"></div>
  <div class="actions">
    <%= f.submit "New Book", class: "btn btn-default" %>
  </div>
<% end %>
