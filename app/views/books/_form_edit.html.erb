<div class="row">

<%= form_for(@book, :html => {:multipart => true}, :validate => true) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being edited:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name , class: 'form_control'%>
  </div>
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :private %><br>
    <%= f.check_box :private %>
  </div>
  <div class="form-group">
    <%= f.label :document %><br>
    <%= f.file_field :document%>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail %><br>
    <%= f.file_field :thumbnail %>
  </div>

  <div class="tag-title">
    <h2> Edit the tags of your book: </h2>
  </div>
  <div class="tag-grid">
    <ul class="tag-grid-ul">
        <% @tags.each do |t| %>
          <li>
            <div class="form-group">
              <%= f.label t.name  %>
              <% if @book.tags.include? t %>
                <%= check_box_tag "tags[]", t.id, true %>
              <% else %>
                <%= check_box_tag "tags[]", t.id, false %>
              <% end %>
            </div>
          </li>
        <% end %>
    </ul>
  </div>

  <div class="actions">
    <%= f.submit "Edit Book", class: "btn btn-default" %>
  </div>
<% end %>
