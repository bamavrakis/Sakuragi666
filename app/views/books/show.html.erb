<div class="clearfix"></div>
<div class="row">
  <h1 class="center"><%= @book.name %></h1>
  <div class="col-md-6 center">
    <%= link_to image_tag(@book.thumbnail(:medium), class: "book-preview"), pdfjs.full_path(file: @book.document.url) %>
    <%= @path %>
    <%= @extended_path %>
  </div>
  <div class="col-md-6 center">
    <%= @book.tags.each do |tag| %>
      <%= tag.name %>
    <% end %>
  </div>
  <div class="clearfix"></div>
  <% if(@book.uploader == current_user) %>
    <%= link_to 'Edit', edit_book_path(@book) %>
    <%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <% if(!current_user.books.include?(@book)) %>
    <%= link_to 'Add to my library', add_to_library_path(@book) %>
  <% end %>

  <%= link_to 'Convert to epub', convert_path(@book) %>
  <%= link_to 'Back', books_path %>
</div>

