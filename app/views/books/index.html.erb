<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<h3>Public eBooks</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Popularity</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <% if !book.private?%>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.popularity %></td>
          <td><%= book.private %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<h3> Your eBooks</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Popularity</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <% if book.private? && book.user_id == current_user.id %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.popularity %></td>
          <td><%= book.private %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
